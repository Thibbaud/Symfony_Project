{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <h1>User</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>

            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('account_edit', {'id': user.id}) }}">edit</a>

        {{ include('account/_delete_form.html.twig') }}
    </div>
{% endblock %}
